#version 330 core

// Texture coords
in vec2 TexToFrag;

// Texture number
uniform sampler2D ourTexture;

layout (std140) uniform TextureData
{
    // Primitives color
    vec4 inColor;
    // Wheter draw texture or primitives
    bool renderTexture;
};

out vec4 outColor;

void main()
{
    if (renderTexture) {
        outColor = texture(ourTexture, TexToFrag);
    } else {
        outColor = inColor;
    }
}