#version 330 core

// Texture coords
in vec2 tex_coords;
in vec4 FragColor;

// Texture number
uniform sampler2D image;

layout (std140) uniform TextureData
{
    // Wheter draw texture or primitives
    bool renderTexture;
};

out vec4 outColor;

void main()
{
    if (renderTexture) {
        outColor = texture(image, tex_coords);
    } else {
        outColor = FragColor;
    }
}
